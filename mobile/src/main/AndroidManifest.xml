<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.trainservice.trainservice">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

<application android:name=".TrainServiceApplication" android:allowBackup="true" android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name" android:supportsRtl="true" android:theme="@style/AppTheme">
    <activity android:name=".LoadingActivity" android:theme="@android:style/Theme.NoTitleBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity android:name=".MainActivity" android:label="@string/app_name" android:launchMode="singleTop"
        android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
        </intent-filter>
    </activity>
    <activity android:name=".LoginActivity" android:label="@string/title_activity_login"
        android:launchMode="singleTop" android:parentActivityName=".MainActivity" />

    <activity android:name=".service.food.FoodListActivity" android:label="@string/title_food_list"
        android:parentActivityName=".MainActivity" android:theme="@style/AppTheme.NoActionBar">
        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="cn.trainservice.trainservice.MainActivity" />
    </activity>
    <activity android:name=".service.food.FoodDetailActivity" android:label="@string/title_food_detail"
        android:parentActivityName=".service.food.FoodListActivity" android:theme="@style/AppTheme.NoActionBar">
        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="cn.trainservice.trainservice.service.food.FoodListActivity" />
    </activity>
    <activity android:name=".service.commodity.CommodityListActivity" android:label="@string/title_commodity_list"
        android:parentActivityName=".MainActivity" android:theme="@style/AppTheme.NoActionBar">
        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="cn.trainservice.trainservice.MainActivity" />
    </activity>
    <activity android:name=".service.commodity.CommodityDetailActivity" android:label="@string/title_commodity_detail"
        android:parentActivityName=".service.commodity.CommodityListActivity" android:theme="@style/AppTheme.NoActionBar">
        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="cn.trainservice.trainservice.service.commodity.CommodityListActivity" />
    </activity>
    <activity android:name=".service.serviceItem.ServiceItemListActivity" android:label="@string/title_serviceitem_list"
        android:parentActivityName=".MainActivity" android:theme="@style/AppTheme.NoActionBar">
        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="cn.trainservice.trainservice.MainActivity" />
    </activity>
    <activity android:name=".service.serviceItem.ServiceItemDetailActivity" android:label="@string/title_serviceitem_detail"
        android:parentActivityName=".service.serviceItem.ServiceItemListActivity" android:theme="@style/AppTheme.NoActionBar">
        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="cn.trainservice.trainservice.service.serviceItem.ServiceItemListActivity" />
    </activity>
    <activity android:name=".service.radio.RadioActivity" android:label="@string/title_activity_radio"
        android:parentActivityName=".MainActivity" android:theme="@style/AppTheme.NoActionBar">
        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="cn.trainservice.trainservice.MainActivity" />
    </activity>
    <activity android:name=".journey.CityDetailActivity" android:label="@string/title_activity_city_detail"
        android:parentActivityName=".MainActivity" android:theme="@style/AppTheme.NoActionBar">
        <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="cn.trainservice.trainservice.MainActivity" />
    </activity>

        <service
            android:name=".StationNotifyService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </service>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".service.Chat.ChattingActivity"
            android:label="@string/title_activity_chatting"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cn.trainservice.trainservice.MainActivity" />
        </activity>
    </application>

</manifest>
